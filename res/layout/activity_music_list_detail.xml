<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_music_list_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/a" />

    <LinearLayout
        android:id="@+id/sosuo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_sosuo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_selector"
            android:hint="Please enter the song name"
            android:padding="5dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_sosuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Search"
            android:textColor="@color/coffee"
            android:textSize="18dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/iv_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sosuo_layout"
        android:layout_marginTop="10dp"
        android:divider="#9fb5c9"
        android:dividerHeight="1dp" />

</RelativeLayout>